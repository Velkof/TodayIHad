                    </select> <br />
                    <label>Quantity</label>
                    <input type="number" class="form-control" id="quantityLogFood" value="" /><br /><br />

                    <button class="btn btn-success saveBtn">Save</button>
                    <button class="btn btn-default cancelBtn">Cancel</button>
                </div>

            </div>

